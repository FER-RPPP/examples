@model Country

@{
  ViewBag.Title = "Add new country";
}

<h2>Add new country</h2>

<form asp-action="Create" method="post">
  <div class="mb-3">
    <label asp-for="CountryCode" class="form-label"></label>
    <input asp-for="CountryCode" class="form-control" />
    <div class="form-text"><span asp-validation-for="CountryCode" class="text-danger"></span></div>
  </div>
  <div class="mb-3">
    <label asp-for="CountryName" class="form-label"></label>
    <input asp-for="CountryName" class="form-control" />
    <div class="form-text"><span asp-validation-for="CountryName" class="text-danger"></span></div>
  </div>
  <div class="mb-3">
    <label asp-for="CountryIso3" class="form-label"></label>
    <input maxlength="3" asp-for="CountryIso3" class="form-control" />
    <div class="form-text"><span asp-validation-for="CountryIso3" class="text-danger"></span></div>
  </div>
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
  <div asp-validation-summary="All"></div>
</form>

@section scripts {
  <partial name="IncludeValidation" />
}