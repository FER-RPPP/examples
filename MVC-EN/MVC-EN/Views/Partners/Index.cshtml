@model PartnersViewModel

@{
  ViewBag.Title = "Partners";
  //keep current entries in ViewData, and add PagingInfo
  var viewdata = new ViewDataDictionary(ViewData) { { "PagingInfo", Model.PagingInfo } };
}

<h2>Partners (people and companies)</h2>

<a asp-action="Create">Add a partner</a>

<pager page-info="@Model.PagingInfo" page-action="Index" page-title="Enter page number"
       class="float-end">
</pager>


<table class="table table-striped">
  <thead>
    <tr>
      @{
        string[] columns = { "Id", "Type", "Vat Number", "Name" };
        for (int i = 1; i <= columns.Length; i++)
        {
          <th>
            <a asp-route-sort="@i"
               asp-route-page="@Model.PagingInfo.CurrentPage"
               asp-route-ascending="@(Model.PagingInfo.Sort == i ? !Model.PagingInfo.Ascending : true)">
              @columns[i - 1]
            </a>
          </th>
        }
      }
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var partner in Model.Partners)
    {
      <partial name="Get" model="partner" view-data="viewdata" />
    }
  </tbody>
</table>

@section scripts {
  <script src="~/js/pager.js" asp-append-version="true"></script>
  <script src="~/lib/htmx/htmx.min.js" asp-append-version="true"></script> 
  <partial name="IncludeValidation" />

  <script>
    document.body.addEventListener("showMessage", function(evt){     
       toastr[evt.detail.messageType](evt.detail.message);
    })
    document.body.addEventListener("htmx:responseError", function (evt) {
        toastr["error"](evt.detail.error);
    })
  </script>
}