@model PartnerViewModel

@{
    ViewBag.Title = "Ažuriranje partnera";
}

<form asp-action="Edit"
      asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="IdPartnera" />
    <input type="hidden" asp-for="TipPartnera" class="tippartnera" />
    <div class="form-group samotvrtka">
        <label asp-for="NazivTvrtke"></label>
        <div><span asp-validation-for="NazivTvrtke" class="text-danger"></span></div>
        <input asp-for="NazivTvrtke" class="form-control" />
    </div>
    <div class="form-group samotvrtka">
        <label asp-for="MatBrTvrtke"></label>
        <div><span asp-validation-for="MatBrTvrtke" class="text-danger"></span></div>
        <input asp-for="MatBrTvrtke" class="form-control" />
    </div>
    <div class="form-group samoosoba">
        <label asp-for="ImeOsobe"></label>
        <div><span asp-validation-for="ImeOsobe" class="text-danger"></span></div>
        <input asp-for="ImeOsobe" class="form-control" />
    </div>
    <div class="form-group samoosoba">
        <label asp-for="PrezimeOsobe"></label>
        <div><span asp-validation-for="PrezimeOsobe" class="text-danger"></span></div>
        <input asp-for="PrezimeOsobe" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Oib"></label>
        <div><span asp-validation-for="Oib" class="text-danger"></span></div>
        <input asp-for="Oib" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AdrPartnera"></label>
        <div><span asp-validation-for="AdrPartnera" class="text-danger"></span></div>
        <input asp-for="AdrPartnera" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdMjestaPartnera"></label>
        <div><span asp-validation-for="IdMjestaPartnera" class="text-danger"></span></div>
        <input asp-for="NazMjestaPartnera" class="form-control" data-autocomplete="mjesto"
               data-autocomplete-placeholder-name="mjestopartnera"
               value="@Model.NazMjestaPartnera" />
        <input type="hidden" asp-for="IdMjestaPartnera" data-autocomplete-placeholder="mjestopartnera" />
    </div>
    <div class="form-group">
        <label asp-for="AdrIsporuke"></label>
        <div><span asp-validation-for="AdrIsporuke" class="text-danger"></span></div>
        <input asp-for="AdrIsporuke" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdMjestaIsporuke"></label>
        <div><span asp-validation-for="IdMjestaIsporuke" class="text-danger"></span></div>
        <input asp-for="NazMjestaIsporuke" class="form-control" data-autocomplete="mjesto"
               data-autocomplete-placeholder-name="mjestoisporuke"
               value="@Model.NazMjestaIsporuke" />
        <input type="hidden" asp-for="IdMjestaIsporuke" data-autocomplete-placeholder="mjestoisporuke" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index" 
            asp-route-page="@ViewBag.Page"
            asp-route-sort="@ViewBag.Sort"
            asp-route-ascending="@ViewBag.Ascending" 
           class="btn btn-secondary">Odustani</a>
    </div>
    
</form>


@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
  <partial name="IncludeValidation" />
  <script src="~/lib/jqueryui/jquery-ui.js"></script>
  <script src="~/js/autocomplete.js" asp-append-version="true"></script>

  <script type="text/javascript">        
      $(function () {                        
          OsobaIliTvrtka($('.tippartnera').val());
      });
               
      function OsobaIliTvrtka(tip) {            
          if (tip == 'O') {
              $(".samotvrtka").hide();
              $(".samoosoba").show();
          }
          else {
              $(".samoosoba").hide();
              $(".samotvrtka").show();
          }        
      }
  </script>
}