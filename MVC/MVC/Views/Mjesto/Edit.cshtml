@model MjestoViewModel


<tr hx-target="this" hx-swap="outerHTML">  
  <td class="text-start">    
    <input asp-for="PostBrojMjesta" class="form-control" />
  </td>
  <td class="text-start">
    <input asp-for="NazivMjesta" class="form-control" />
  </td>
  <td class="text-start">
    <input asp-for="PostNazivMjesta" class="form-control" />
  </td>
  <td class="text-start">
    <select class="form-select" asp-for="OznDrzave" asp-items="ViewBag.Drzave">
    </select>
  </td>
  <td>
    <input type="hidden" asp-for="IdMjesta" />
    <button hx-include="closest tr"
            hx-post="@Url.Action(nameof(MjestoController.Edit))"
            class="btn btn-sm btn-primary" title="Spremi"><i class="fas fa-save"></i></button>
  </td>
  <td>
    <button class="btn btn-sm cancel" 
            hx-get="@Url.Action(nameof(MjestoController.Get), new { id = Model.IdMjesta })"            
            title="Odustani"><i class="fas fa-undo-alt"></i></button>
  </td>
  <td>
    <div asp-validation-summary="All"></div>
  </td>
</tr>